<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mm="http://millennialmedia.com/android/schema"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/advertisement_height" >

        <LinearLayout
            android:id="@+id/listVideosContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="ru.russianbravedev.dotamania.FunnyVideoList"
            tools:ignore="MergeRootFrame" />
    </ScrollView>
    <LinearLayout
        android:id="@+id/mmediaad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/advertisement_height"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/black">
    </LinearLayout>
</FrameLayout>