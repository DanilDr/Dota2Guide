<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mm="http://millennialmedia.com/android/schema"
    android:background="#000"
    android:layout_width="match_parent"
    android:layout_height="fill_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/advertisement_height"
        tools:context=".Neutrals" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ru.russianbravedev.dotamania.RomulTextView
                android:id="@+id/crespMainTitleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/mainbuttontextcolor"
                android:textSize="@dimen/romultext_view_size" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@color/mainbuttoncolor"
                android:padding="1dp" >

                <TextView
                    android:id="@+id/creps_type_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1a1a1a"
                    android:padding="3dp"
                    android:text="@string/creps_description"
                    android:textColor="@color/mainbuttontextcolor"
                    android:textSize="@dimen/accordfontsize" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/crepsLinkLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ru.russianbravedev.dotamania.RomulTextView
                    android:id="@+id/crepsNeutralUnits"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/romultext_view_height"
                    android:background="@color/mainbuttoncolor"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:text="@string/neutral_units"
                    android:textColor="@color/mainbuttontextcolor"
                    android:textSize="@dimen/romultext_view_size" />

                <ru.russianbravedev.dotamania.RomulTextView
                    android:id="@+id/crepsAlliedTroops"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/romultext_view_height"
                    android:background="@color/mainbuttoncolor"
                    android:gravity="center"
                    android:text="@string/allied_troops"
                    android:textColor="@color/mainbuttontextcolor"
                    android:textSize="@dimen/romultext_view_size" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/mmediaad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/advertisement_height"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:gravity="center">
    </LinearLayout>
    
</FrameLayout>
