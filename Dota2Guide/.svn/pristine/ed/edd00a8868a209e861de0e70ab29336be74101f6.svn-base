<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="0dp"
    android:layout_margin="0dp"
    tools:context=".MainMenu" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal" >

            <ru.bravedevrus.dotaguidetactics.MainMenuButtons
		        xmlns:customNS="http://schemas.android.com/apk/res/ru.bravedevrus.dotaguidetactics"
                android:id="@+id/dotaBuffHeroes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
                customNS:iconmm="R.drawable.dotabuffheroes" 
                customNS:titlemm="R.string.heroes" />
            <ru.bravedevrus.dotaguidetactics.MainMenuButtons
		        xmlns:customNS="http://schemas.android.com/apk/res/ru.bravedevrus.dotaguidetactics"
                android:id="@+id/dotaBuffItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
                customNS:iconmm="R.drawable.dotabuffitems"
                customNS:titlemm="R.string.items" />
            <ru.bravedevrus.dotaguidetactics.MainMenuButtons
		        xmlns:customNS="http://schemas.android.com/apk/res/ru.bravedevrus.dotaguidetactics"
                android:id="@+id/dotaBuffMatches"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
                customNS:iconmm="R.drawable.dotabuffmatches" 
                customNS:titlemm="R.string.matches" />
            <ru.bravedevrus.dotaguidetactics.MainMenuButtons
		        xmlns:customNS="http://schemas.android.com/apk/res/ru.bravedevrus.dotaguidetactics"
                android:id="@+id/dotaBuffPlayers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
                customNS:iconmm="R.drawable.dotabuffplayers"
                customNS:titlemm="R.string.players" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <ru.bravedevrus.dotaguidetactics.MainMenuButtons
		        xmlns:customNS="http://schemas.android.com/apk/res/ru.bravedevrus.dotaguidetactics"
                android:id="@+id/dotaBuffTeams"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
                customNS:iconmm="R.drawable.dotabuffteams"
                customNS:titlemm="R.string.teams"
                android:layout_gravity="left" />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5" />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5" />
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
