<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="0dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainMenu" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:background="#000"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:orientation="horizontal" >

            <com.redeyesstudio.dota2guide.MainMenuButtons
                xmlns:customNS="http://schemas.android.com/apk/res/com.redeyesstudio.dota2guide"
                android:id="@+id/serviceMenuDotabuff"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:layout_weight="0.5" 
                customNS:iconmm="R.drawable.dotabuffserv" 
                customNS:titlemm="R.string.statistic"
                customNS:activity="DotaBuffMenu" />

            <com.redeyesstudio.dota2guide.MainMenuButtons
                xmlns:customNS="http://schemas.android.com/apk/res/com.redeyesstudio.dota2guide"
                android:id="@+id/serviceMenuSteam"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:layout_weight="0.5" 
                customNS:iconmm="R.drawable.steamserv" 
                customNS:titlemm="R.string.steam"
                customNS:activity="Steam" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >

            <com.redeyesstudio.dota2guide.MainMenuButtons
                xmlns:customNS="http://schemas.android.com/apk/res/com.redeyesstudio.dota2guide"
                android:id="@+id/serviceMenuWallpappers"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:layout_weight="0.5" 
                customNS:iconmm="R.drawable.wallpapperserv" 
                customNS:titlemm="R.string.wallpaper"
                customNS:activity="Wallpapers" />

            <com.redeyesstudio.dota2guide.MainMenuButtons
                xmlns:customNS="http://schemas.android.com/apk/res/com.redeyesstudio.dota2guide"
                android:id="@+id/serviceMenuFunny"
                android:layout_width="match_parent"
                android:layout_height="match_parent" 
                android:layout_weight="0.5" 
                customNS:iconmm="R.drawable.funnyserv" 
                customNS:titlemm="R.string.funny"
                customNS:activity="FunnyMenu" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25" >

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
