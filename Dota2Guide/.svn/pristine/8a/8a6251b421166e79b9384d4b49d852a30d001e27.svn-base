<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="0dp"
    android:layout_margin="0dp"
    tools:context=".MainMenu" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal" >

            <ru.russianbravedev.dotamania.MainMenuButtons
		        xmlns:customNS="http://schemas.android.com/apk/res/ru.russianbravedev.dotamania"
                android:id="@+id/funnyVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
                customNS:iconmm="R.drawable.funnyvideo" 
                customNS:titlemm="R.string.video"
                customNS:activity="FunnyVideoMenu" />
            
            <ru.russianbravedev.dotamania.MainMenuButtons
		        xmlns:customNS="http://schemas.android.com/apk/res/ru.russianbravedev.dotamania"
                android:id="@+id/fannyGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
                customNS:iconmm="R.drawable.funnygame"
                customNS:titlemm="R.string.game"
                customNS:activity="DotaItemsGame" />
            <ru.russianbravedev.dotamania.MainMenuButtons
		        xmlns:customNS="http://schemas.android.com/apk/res/ru.russianbravedev.dotamania"
                android:id="@+id/funnyPicts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
                customNS:iconmm="R.drawable.fannypicts"
                customNS:titlemm="R.string.pictures"
                android:layout_gravity="left"
                customNS:activity="FunnyPicts" />
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal" />
    </LinearLayout>
</RelativeLayout>
