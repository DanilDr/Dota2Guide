<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mm="http://millennialmedia.com/android/schema"
    android:id="@+id/FrameLayout1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#000" >

    <LinearLayout
        android:id="@+id/mainShowHero"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ShowHero"
        android:layout_marginBottom="@dimen/advertisement_height" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp" >

            <ru.bravedevrus.dotaguidetactics.RomulTextView
                android:id="@+id/btnHeroBio"
                android:layout_width="match_parent"
                android:layout_height="@dimen/romultext_view_height"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#ff1c25"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/biography"
                android:textColor="#fff"
                android:textSize="@dimen/romultext_view_size" />

            <ru.bravedevrus.dotaguidetactics.RomulTextView
                android:id="@+id/btnHeroSkills"
                android:layout_width="match_parent"
                android:layout_height="@dimen/romultext_view_height"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#ff1c25"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/skills"
                android:textColor="#fff"
                android:textSize="@dimen/romultext_view_size" />

            <ru.bravedevrus.dotaguidetactics.RomulTextView
                android:id="@+id/btnHeroGuid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/romultext_view_height"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="#ff1c25"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/guides"
                android:textColor="#fff"
                android:textSize="@dimen/romultext_view_size" />
        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/mainHeroInfo"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="0dp"
                android:orientation="vertical" >
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/mmediaad"
        android:layout_width="match_parent"
        android:layout_height="@dimen/advertisement_height"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/black">
    </LinearLayout>
    
</FrameLayout>
