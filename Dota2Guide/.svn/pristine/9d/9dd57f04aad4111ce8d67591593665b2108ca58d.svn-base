<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mm="http://millennialmedia.com/android/schema"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/mainbackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="35dp"
        android:padding="3dp" >

        <ru.bravedevrus.dotaguidetactics.RomulTextView
            android:id="@+id/forcebtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/romultext_view_height"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/mainbuttoncolor"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/strength"
            android:textColor="@color/mainbuttontextcolor"
            android:textSize="@dimen/romultext_view_size" />

        <ru.bravedevrus.dotaguidetactics.RomulTextView
            android:id="@+id/agilitybtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/romultext_view_height"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/mainbuttoncolor"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/agility"
            android:textColor="@color/mainbuttontextcolor"
            android:textSize="@dimen/romultext_view_size" />

        <ru.bravedevrus.dotaguidetactics.RomulTextView
            android:id="@+id/intellegencybtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/romultext_view_height"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/mainbuttoncolor"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/intellegency"
            android:textColor="@color/mainbuttontextcolor"
            android:textSize="@dimen/romultext_view_size" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8" >

        <GridView
            android:id="@+id/heroesgrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_weight="0.8"
            android:listSelector="@android:color/transparent"
            android:numColumns="6"
            android:padding="0dp" >
        </GridView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mmediaad"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/black">
    </LinearLayout>
    
</LinearLayout>
