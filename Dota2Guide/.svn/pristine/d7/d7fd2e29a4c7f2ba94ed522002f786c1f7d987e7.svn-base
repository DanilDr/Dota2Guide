<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:padding="0dp"
    android:layout_margin="0dp"
    tools:context=".MainMenu" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal" >

	        <com.redeyesstudio.dota2guide.MainMenuButtons
	            xmlns:customNS="http://schemas.android.com/apk/res/com.redeyesstudio.dota2guidestactics"
	            android:id="@+id/steamStore"
	            android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
	            customNS:iconmm="R.drawable.store" 
	            customNS:titlemm="R.string.store"
	            customNS:activity="SteamStore" />
	        <com.redeyesstudio.dota2guide.MainMenuButtons
	            xmlns:customNS="http://schemas.android.com/apk/res/com.redeyesstudio.dota2guidestactics"
	            android:id="@+id/steamDotaNews"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" 
	            android:layout_weight="0.5"
	            customNS:iconmm="R.drawable.steamnews"
	            customNS:titlemm="R.string.steamnews"
	            customNS:activity="SteamNews" />
            <com.redeyesstudio.dota2guide.MainMenuButtons
                xmlns:customNS="http://schemas.android.com/apk/res/com.redeyesstudio.dota2guidestactics"
                android:id="@+id/steamInventory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
                customNS:iconmm="R.drawable.inventory" 
                customNS:titlemm="R.string.inventory"
                customNS:activity="SteamInventory" />
            <com.redeyesstudio.dota2guide.MainMenuButtons
                xmlns:customNS="http://schemas.android.com/apk/res/com.redeyesstudio.dota2guidestactics"
                android:id="@+id/steamMatchhistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="0.5"
                customNS:iconmm="R.drawable.matchhistory"
                customNS:titlemm="R.string.matchhistory"
                customNS:activity="MatchHistory" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="horizontal" />
    </LinearLayout>
</RelativeLayout>
